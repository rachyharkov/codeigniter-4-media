{
    "name": "rachyharkov/codeigniter4-media",
    "description": "Codeigniter 4 library for managing media and handling upload behavior",
    "type": "library",
    "require": {
        "php": ">=7.3",
        "codeigniter4/framework": "^4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Rachmad Nur Hayat",
            "email": "rachmadnurhayat@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rachyharkov\\CodeigniterMedia\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "scripts" : {
        "post-install-cmd" : [
            "php -r \"copy('table/CreateMedia.php', 'app/Database/Migrations/2019-08-01-092856_CreateMedia.php.php');\"",
            "php -r \"mkdir('public/media');\"",
            "php -r \"copy('assets/no-image.png', 'public/media/no-image.png');\""
        ]
    }
